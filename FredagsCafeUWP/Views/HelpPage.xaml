<Page
    x:Class="FredagsCafeUWP.Models.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot>
            <PivotItem Header="Salg">
                <Image Source="/Views/HelpImages/Salg Help.png" />
            </PivotItem>
            <PivotItem Header="Lager">
                <Image Source="/Views/HelpImages/Lager Help.png" />
            </PivotItem>
            <PivotItem Header="Administration">
                <Image Source="/Views/HelpImages/Administration Help.png" />
            </PivotItem>
            <PivotItem Header="Event">
                <Image Source="/Views/HelpImages/Event Help.png" />
            </PivotItem>
            <PivotItem Header="Statistik">
                <Image Source="/Views/HelpImages/Statistik Help.png" />
            </PivotItem>
            <PivotItem Header="LogIn">
                <TextBlock Text="For at logge ind første gang skal du bruge UserName:'Admin' og Password:'Admin'" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
